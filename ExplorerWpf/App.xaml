<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
    x:Class="ExplorerWpf.App"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary2.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ItemsPresenterStyle1" TargetType="{x:Type ItemsPresenter}" />
            <Color x:Key="DynamicResourceControlDarkDarkBrushKey">#00000000</Color>
            <Brush x:Key="DynamicResourceControlTextBrushKey">#474B8F</Brush>
            <Color x:Key="DynamicResourceControlLightBrushKey">#00000000</Color>
            <Color x:Key="DynamicResourceControlDarkBrushKey">#00000000</Color>

            <Brush x:Key="DisabledBackgroundBrush">#474B8F</Brush>
            <Brush x:Key="DisabledForegroundBrush">#474B8F</Brush>


            <LinearGradientBrush x:Key="Background" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#F3181B28" />
                <GradientStop Color="#DD181B28" Offset="1" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="Foreground" EndPoint="0,0" StartPoint="1,0">
                <GradientStop Color="#FFAE54F0" Offset="1" />
                <GradientStop Color="#FF5A32E6" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="ScrollBarBackground" Color="#FF303651" />
            <SolidColorBrush x:Key="DefBack" Color="#FF181B28" />
            <SolidColorBrush x:Key="Border" Color="#FF111421" />
            <SolidColorBrush x:Key="Accent" Color="#E6141721" />
            <SolidColorBrush x:Key="WindowBorder" Color="#7F090E1D" />

            <LinearGradientBrush x:Key="BackgroundLight" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#F3181B28" />
                <GradientStop Color="#CC181B28" Offset="1" />
            </LinearGradientBrush>


            <!--Control colors.-->
            <Color x:Key="WindowColor">#153685</Color>

            <Color x:Key="SelectedBackgroundColor">#212650</Color>
            <Color x:Key="SelectedUnfocusedColor">#2B305E</Color>
            <Brush x:Key="DynamicResourceControlBrushKey">#312F49</Brush>

            <Color x:Key="ControlLightColor">#F3181B28</Color>
            <Color x:Key="ControlMediumColor">#F3181B29</Color>

            <Color x:Key="ControlMouseOverColor">#F31E2234</Color>

            <Color x:Key="GlyphColor">#FF186884</Color>
            <SolidColorBrush x:Key="GlyphBrush" Color="{DynamicResource GlyphColor}" />
            <SolidColorBrush x:Key="ControlLightBrush" Color="{DynamicResource ControlLightColor}" />
            <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{DynamicResource SelectedBackgroundColor}" />
           
        </ResourceDictionary>
    </Application.Resources>
</Application>