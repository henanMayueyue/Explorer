<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ExplorerWpf"
    xmlns:WPF="clr-namespace:ConsoleControl.WPF;assembly=ConsoleControl.WPF"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    x:Class="ExplorerWpf.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="524.626" Width="800.07" Background="#1F000000"  ResizeMode="CanResize" Loaded="MainWindow_OnLoaded">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="10" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid Background="Red" MouseDown="MoveWindow" Height="20" VerticalAlignment="Top">
            <Button VerticalAlignment="Top" Height="20" Content="❌" FontSize="10" Foreground="#FFFF1111" Click="CloseClick" HorizontalAlignment="Right" Width="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF190000" Offset="0.8"/>
                        <GradientStop Color="#FF190000" Offset="0.2"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Margin="0,0,20,0" VerticalAlignment="Top" Height="20" Content="🔳" FontSize="10" Foreground="#FF00D1FF" Click="MaxClick" HorizontalAlignment="Right" Width="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2C2A00" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Margin="0,0,40,0" VerticalAlignment="Top" Height="20" Content="📦" FontSize="10" Foreground="Yellow" Click="MinClick" HorizontalAlignment="Right" Width="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF474747" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Margin="0,0,60,0" VerticalAlignment="Top" Height="20" Content="📌" FontSize="10" Foreground="Magenta" Click="PingClick" HorizontalAlignment="Right" Width="20">
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF1DFF32"/>
                        <GradientStop Color="#FF07410C"/>
                        <GradientStop Color="#FF12EA26"/>
                        <GradientStop Color="#FF032806" Offset="0.69"/>
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="138*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Grid />

                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
                <Grid Grid.Column="2"  x:Name="grid1" />
                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Black"
                              ShowsPreview="True" Height="6" Grid.ColumnSpan="3" />

                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="Black">
                    <WPF:ConsoleControl x:Name="consoleX" Background="#60111111" FontWeight="Bold" Foreground="Red" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>